metadata:
  name: Julio-OpenShift-Test-App
projects:
  - name: Julio-OpenShift-Test-App
    source:
      location: 'https://us-south.git.cloud.ibm.com/amtrice/Andy-OpenShift-Test-App'
      type: git
components:
  - id: che-incubator/typescript/latest
    memoryLimit: 512Mi
    type: chePlugin
  - mountSources: true
    endpoints:
      - name: nodejs
        port: 3000
    memoryLimit: 512Mi
    type: dockerimage
    alias: nodejs
    image: 'quay.io/eclipse/che-nodejs10-ubi:7.8.0'
apiVersion: 1.0.0
commands:
  - name: download dependencies
    actions:
      - workdir: '${CHE_PROJECTS_ROOT}/Julio-OpenShift-Test-App'
        type: exec
        command: npm install
        component: nodejs
  - name: run the web app
    actions:
      - workdir: '${CHE_PROJECTS_ROOT}/Julio-OpenShift-Test-App'
        type: exec
        command: nodemon server/server.js
        component: nodejs
  - name: run the web app (debugging enabled)
    actions:
      - workdir: '${CHE_PROJECTS_ROOT}/Julio-OpenShift-Test-App'
        type: exec
        command: nodemon --inspect server/server.js
        component: nodejs
  - name: stop the web app
    actions:
      - type: exec
        command: >-
          node_server_pids=$(pgrep -fx '.*nodemon (--inspect )?server.js' | tr
          "\\n" " ") && echo "Stopping node server with PIDs:
          ${node_server_pids}" &&  kill -15 ${node_server_pids} &>/dev/null &&
          echo 'Done.'
        component: nodejs
  - name: Attach remote debugger
    actions:
      - referenceContent: |
          {
            "version": "0.2.0",
            "configurations": [
              {
                "type": "node",
                "request": "attach",
                "name": "Attach to Remote",
                "address": "localhost",
                "port": 9229,
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "${workspaceFolder}"
              }
            ]
          }
        type: vscode-launch
